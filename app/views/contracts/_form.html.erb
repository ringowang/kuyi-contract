<%= form_with(model: contract, local: true) do |form| %>
  <%= render 'shared/error_messages', model: @contract %>

  <div class="field">
    <%= form.label :title %>
    <%= form.text_field :title, id: :contract_title %>
  </div>

  <div class="field">
    <%= form.label :start_date %>
    <%= form.date_select :start_date, id: :contract_start_date, use_month_numbers: true %>
  </div>

  <div class="field">
    <%= form.label :end_date %>
    <%= form.date_select :end_date, id: :contract_end_date, use_month_numbers: true %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
